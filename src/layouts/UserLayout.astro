---
import Head from "../components/page/Head.astro";

import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  index: boolean;
}

const { title, description, index } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <Head title={title} description={description} index={index} />
  </head>
  <body ontouchend="">
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body,
  main {
    overflow: hidden;
  }

  main {
    width: 100%;
    height: 100%;
  }
</style>
