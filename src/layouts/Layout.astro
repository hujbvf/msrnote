---
import Head from "../components/page/Head.astro";
import Header from "../components/page/Header.astro";
import Footer from "../components/page/Footer.astro";

import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  index: boolean;
}

const { title, description, index } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <Head title={title} description={description} index={index} />
  </head>
  <body ontouchend="">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
